//Accept a number from the user and check whether the number is positive or negative.

#include<stdio.h>

int main()
{
  int n;
  printf("\n Enter the number  = ");
  scanf(" %d",&n);
  
  if(n>=0)
    printf("\n The given Number %d is a Positive number", n);
  else
    printf("\n The given Number %d is a Negative number", n);

  return 0;
 
}  
